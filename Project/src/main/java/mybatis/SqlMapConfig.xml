<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<typeAliases>
		<typeAlias alias="MyEmploee" type="employee.EmpBean"/>
		<typeAlias alias="MyProduct" type="order.ProdBean"/>
		<typeAlias alias="MyOrder" type="order.OrdBean"/>
		<typeAlias alias="MyPayment" type="payment.PaymentBean"/>
		<typeAlias alias="MyPaymentday" type="payment.PaymentdayBean"/>
	</typeAliases>
	
	
	<mappers>
		<mapper resource="mybatis/employee.xml"/>
		<mapper resource="mybatis/order.xml"/> 
		<mapper resource="mybatis/payment.xml"/> 
	</mappers>
</configuration>
